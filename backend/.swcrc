{
  "$schema": "https://json.schemastore.org/swcrc",
  "sourceMaps": true,
  "minify": false,
  "jsc": {
    "target": "es2022",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "src/*"]
    },
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "transform": {
      "legacyDecorator": true,
      "decoratorMetadata": true
    }
  }
}